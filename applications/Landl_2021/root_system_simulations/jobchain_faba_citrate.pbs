#!/bin/bash
#submit a chain of jobs





cc=1
while [ $cc -le 20 ];
do


    cd CPlantBox/applications/Landl_2021/root_system_simulations/simulations/plant1/exudate1/day$cc/	
    cat <<EOF> plant_exud11$cc.pbs

#!/bin/sh
#PBS -N exud_11$cc
#PBS -l nodes=1:ppn=2,walltime=100:00:00,vmem=120gb
#PBS -q openmp
#PBS -m e

cd CPlantBox/applications/Landl_2021/root_system_simulations/simulations/plant1/exudate1/day$cc/
module load python-3.8
module load dumux 
python3 example_exudate.py


EOF

    if [ -f ../vtp/day$cc.vtp ];  then 
	 echo "wrong"
	 let cc=$cc+1
    else
	/usr/bin/qsub plant_exud11$cc.pbs
	cd CPlantBox/applications/Landl_2021/root_system_simulations/simulations/plant1/exudate1/day$cc/

	while  [ ! -f ../vtp/day$cc.vtp ]; 
	do 
	    sleep 30
	    echo "in the loop"
	done
	let cc=$cc+1
    fi

done	

