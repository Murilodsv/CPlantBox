#!/bin/bash
#submit a chain of jobs



aa=1
while [ $aa -le 2 ]; 
do

    bb=1
    while [ $bb -le 2 ];
    do


	cd /home/m.landl/CPlantBox/applications/exudation/simulations/plant$aa/exudate$bb/	

	cc=1
	while [ $cc -le 40 ];
	do 

	    cd day$cc
	    rm -r exud*
	    cd ..

	    let cc=$cc+1
	done

	let bb=$bb+1
     done
     let aa=$aa+1

done

